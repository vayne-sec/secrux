# Production (infra node) environment variables
# Copy to `.env` and replace defaults.

# -----------------------------------------------------------------------------
# Ports exposed on the infra node (adjust firewall accordingly)
# -----------------------------------------------------------------------------
POSTGRES_PORT=5432
AI_POSTGRES_PORT=5433
KAFKA_PORT=19092
KAFKA_ADVERTISED_HOST=INFRA_PUBLIC_HOST_OR_IP
REDIS_PORT=6379
KEYCLOAK_PORT=8081

# -----------------------------------------------------------------------------
# Postgres (control plane)
# -----------------------------------------------------------------------------
POSTGRES_DB=secrux
POSTGRES_USER=secrux
POSTGRES_PASSWORD=change-me

# -----------------------------------------------------------------------------
# Postgres (AI service)
# -----------------------------------------------------------------------------
AI_POSTGRES_DB=secrux_ai
AI_POSTGRES_USER=secrux_ai
AI_POSTGRES_PASSWORD=change-me

# -----------------------------------------------------------------------------
# Keycloak admin (for container bootstrapping only)
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change-me
